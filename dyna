          memory: 60Mi
        limits:
          cpu: 20m
          memory: 60Mi
    livenessprobe:
      resources:
        requests:
          cpu: 20m
          memory: 60Mi
        limits:
          cpu: 20m
          memory: 60Mi

  securityContextConstraints:
    enabled: true # Only applicable for Openshift

  additionalPermissions:
    pvcMonitoring: false

